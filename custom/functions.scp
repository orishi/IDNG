[function unlock]
if !<args>
	sysmessage Co chceš odemknout?
	targetf unlock 1
else
	obj=<argo.uid>
	if (<obj.type>==t_door_locked)
		obj.type=t_door
		sysmessage Odemčeno.
	elseif (<obj.type>==t_container_locked)
		obj.type=t_container
		sysmessage Odemčeno.
	else
		sysmessage Toto nelze odemknout.
	endif
endif

[function otoc]
if !<args>
	sysmessage <defmsg.target_promt>
	targetf otoc 1
else
	obj=<argo.uid>
	if (<obj.type>==t_letax_krb)
		sysmessage Latexové krby nelze otáčet.
		return 1
	endif
	if ((<obj.distance> <= 1) && (<account.plevel>==1))
		try uid.<argo.uid>.flip
	else
		sysmessage <defmsg.itemuse_toofar>
	endif
endif

