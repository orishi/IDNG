	sysmessage Musíš zadat ".c text zprávy" - zpráva se zobrazí všem online PT/RT/adminům.
	return 1
endif
serv.allclients f_c,<uid>,<args>

[function f_c]
if (<account.plevel> > 1)
    ref1=<argv0>
    local.color=<ref1.speechcolor>
    local.sender=<ref1.name>
    args=<streat <args>>
    sysmessage @<local.color> [<local.sender>]: <args>
endif

[function lock]
if !<args>
	sysmessage Co chceš zamknout (bez klíče)?
	targetf lock 1
else
	obj=<argo.uid>
	if (<obj.type>==t_door)
		obj.type=t_door_locked
		obj.more2=1000
		sysmessage Zamčeno.
	elseif (<obj.type>==t_container)
		obj.type=t_container_locked
		obj.more2=1000
		sysmessage Zamčeno.
	else
		sysmessage Toto nelze zamknout.
	endif
endif

[function lockkey]
if !<args>
	sysmessage Co chceš zamknout na klíč?
	targetf lockkey 1
else
	obj=<argo.uid>
	if (<obj.type>==t_door)
		serv.newitem i_key_copper
		new.more1=<obj.uid>
		obj.more1=<obj.uid>
		obj.more2=1000
		new.bounce
		obj.type=t_door_locked
		sysmessage Zamčeno. Klíč máš v batohu.
	elseif (<obj.type>==t_container)
		serv.newitem i_key_copper
		new.more1=<obj.uid>
		obj.more1=<obj.uid>
		obj.more2=1000
		new.bounce
		obj.type=t_container_locked
		sysmessage Zamčeno. Klíč máš v batohu.
	else
		sysmessage Toto nelze zamknout.
	endif
endif

